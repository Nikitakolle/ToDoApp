@model IEnumerable<ToDoApp.Models.ToDo>

@{
    ViewData["Title"] = "Your Tasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="dashboard-page">
    <div class="container">
        <h1 class="mb-4">Welcome, @User.Identity.Name!</h1>

        <p>
            <a asp-action="Create" class="btn btn-primary">➕ Add New Task</a>
        </p>

        <table class="table table-bordered table-striped">
            <thead class="table-light">
                <tr>
                    <th>Title</th>
                    <th>Completed</th>
                    <th>Created At</th>
                    <th>Completed At</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    var isOverdue = !item.IsDone && item.CreatedAt < DateTime.Now.AddDays(-3);
                    var rowClass = item.IsDone ? "table-success" : isOverdue ? "table-danger" : "";

                    <tr class="@rowClass">
                        <td>@item.Title</td>
                        <td>
                            <span class="badge @(item.IsDone ? "bg-success" : isOverdue ? "bg-danger" : "bg-warning")">
                                @(item.IsDone ? "Done" : isOverdue ? "Overdue" : "Pending")
                            </span>
                        </td>
                        <td>@item.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            @(item.CompletedAt?.ToString("yyyy-MM-dd HH:mm") ?? "-")
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary me-1" title="Edit Task">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white me-1" title="View Details">
                                <i class="bi bi-info-circle"></i> Details
                            </a>
                            <a asp-action="Delete" asp-route-id="@item.Id"
                               class="btn btn-sm btn-danger"
                               title="Delete Task">
                                <i class="bi bi-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

